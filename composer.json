{
    "name": "smeghead/single-file-unit-test",
    "description": "Zero-dependency single-file unit testing framework for PHP 5.6 and above.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "testing",
        "unit-testing",
        "single-file",
        "php"
    ],
    "homepage": "https://github.com/smeghead/single-file-unit-test",
    "support": {
        "issues": "https://github.com/smeghead/single-file-unit-test/issues",
        "source": "https://github.com/smeghead/single-file-unit-test"
    },
    "authors": [
        {
            "name": "smeghead"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "autoload": {
        "files": [
            "single-file-unit-test.php"
        ]
    },
    "bin": [
        "single-file-unit-test.php"
    ],
    "require-dev": {},
    "scripts": {
        "test": [
            "@php single-file-unit-test.php tests"
        ]
    }
}
